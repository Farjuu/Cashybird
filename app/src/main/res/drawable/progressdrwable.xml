<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:centerColor="#06B0E9"
                android:startColor="#06B0F9"
                android:endColor="#41DBC0"
                android:centerX="0.2"
                android:centerY="0.8"/>
            <corners android:radius="50dp"/>
            <stroke android:color="#41DBC0" android:width="1dp"/>
        </shape>
    </item>
</layer-list>