<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back6"
    android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space20"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/casytxt_img"
            android:layout_width="@dimen/space200"
            android:layout_height="@dimen/space80"
            android:layout_gravity="center"
            android:src="@drawable/cashybirdtext" />


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollViewParent"
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:layout_below="@+id/starlayout"
        android:layout_marginTop="-26dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="387dp"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginRight="@dimen/space20"
                android:background="@drawable/loginblueshape"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/space10">

                <LinearLayout
                    android:id="@+id/titlelistview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space20"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="10"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:lines="2"
                        android:text="S.No"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="60"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:lines="2"
                        android:text="Player\nName"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="15"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:lines="2"
                        android:text="Best\nScore"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="15"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center_horizontal"
                        android:lines="2"
                        android:text="Check\nout"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/space10"
                    android:background="@color/active_dots_visitsLikes">


                </View>

                <ListView

                    android:id="@+id/gemUserList"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp">


                </ListView>

            </LinearLayout>

            <TextView
                android:id="@+id/leaderBoardFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space50"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:padding="@dimen/space10"
                android:text="Every week top 10 gems will be announced!"
                android:textColor="@color/active_dots_visitsLikes"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/starlayout"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_below="@+id/topLayout"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star2nd"
            android:layout_width="@dimen/space100"
            android:layout_height="95dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/star2">

        </ImageView>

        <ImageView
            android:id="@+id/star1st"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_star">

        </ImageView>

        <ImageView
            android:id="@+id/star3rd"
            android:layout_width="@dimen/space100"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/star3">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/score_position_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"

        android:layout_below="@+id/topLayout"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/scnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/scnd_position_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="35dp"
                    android:paddingLeft="35dp"
                    android:text="Score : 1000"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/scnd_position_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka_one"
                    android:paddingLeft="20dp"
                    android:text="2nd"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp"
                    android:textStyle="italic" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/first_position_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="35dp"
                    android:paddingLeft="35dp"
                    android:text="Score : 2000"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/first_position_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka_one"
                    android:paddingLeft="20dp"
                    android:text="1st"
                    android:textColor="@color/colorWhite"
                    android:textSize="34sp"
                    android:textStyle="italic" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/third_position_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="35dp"
                    android:text="Score : 800"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView

                    android:id="@+id/third_position_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka_one"
                    android:paddingLeft="25dp"
                    android:text="3rd"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/vungle_banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <LinearLayout
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <LinearLayout
            android:id="@+id/adViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>

</RelativeLayout>