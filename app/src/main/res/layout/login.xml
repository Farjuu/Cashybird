<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back5"
    android:layout_height="match_parent">
    <!--
        <include layout="@layout/back" />-->

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="312dp"
        android:layout_height="80dp"
        android:foregroundGravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="79dp"
        android:gravity="center"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:src="@drawable/cashybirdtext" />

    <EditText
        android:id="@+id/editTextLoginEmail"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_below="@+id/imageView20"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:hint="@string/email_id"
        android:inputType="textEmailAddress" />

    <EditText

        android:id="@+id/editTextLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_below="@+id/editTextLoginEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/rectangle"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:hint="@string/password"
        android:inputType="textPassword"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/forgotTxt"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLoginPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"

        android:fontFamily="@font/fredoka_one"
        android:minHeight="48dp"
        android:onClick="forgotPasswordClicked"
        android:text="@string/forgot_password"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login"
        android:layout_width="219dp"
        android:layout_height="60dp"
        android:layout_below="@+id/forgotTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/loginblueshape"
        android:fontFamily="@font/poppins_medium"
        android:onClick="loginButtonClicked"
        android:text="Log In"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="219dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="26dp"

        android:background="@drawable/signupredshape"
        android:fontFamily="@font/poppins_medium"
        android:onClick="registerButtonClicked"
        android:text="@string/sign_up"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/orTxt"
        android:layout_width="61dp"
        android:layout_height="20dp"
        android:layout_above="@+id/signup"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="178dp"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="172dp"
        android:layout_marginRight="172dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Or"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>