<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/back5"
    android:layout_height="match_parent">
  <!--
      <include layout="@layout/less_opacity_background" />-->


  <EditText
      android:id="@+id/editTextFirstName"
      android:layout_width="wrap_content"
      android:layout_height="64dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginStart="36dp"
      android:layout_marginLeft="36dp"
      android:layout_marginTop="59dp"
      android:layout_marginEnd="41dp"
      android:layout_marginRight="41dp"
      android:background="@drawable/rectangle"
      android:ems="10"
      android:fontFamily="@font/poppins_medium"
      android:gravity="center_vertical"
      android:paddingLeft="20dp"
      android:hint="@string/first_name"
      android:inputType="text"
      android:paddingStart="20dp"/>

  <EditText

      android:id="@+id/editTextLastName"
      android:layout_width="wrap_content"
      android:layout_height="64dp"
      android:layout_below="@+id/editTextFirstName"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginStart="40dp"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="18dp"
      android:layout_marginEnd="37dp"
      android:layout_marginRight="37dp"
      android:background="@drawable/rectangle"
      android:ems="10"
      android:fontFamily="@font/poppins_medium"
      android:gravity="center_vertical"
      android:paddingLeft="20dp"
      android:hint="@string/last_name"
      android:inputType="text"/>

  <EditText

      android:id="@+id/editTextRegisterEmail"
      android:layout_width="wrap_content"
      android:layout_height="64dp"
      android:layout_below="@+id/editTextLastName"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginStart="36dp"
      android:layout_marginLeft="36dp"
      android:layout_marginTop="17dp"
      android:layout_marginEnd="41dp"
      android:layout_marginRight="41dp"
      android:background="@drawable/rectangle"
      android:ems="10"
      android:fontFamily="@font/poppins_medium"
      android:gravity="center_vertical"
      android:paddingLeft="20dp"
      android:hint="@string/email_id"
      android:inputType="textEmailAddress" />

  <EditText

      android:id="@+id/editTextRegisterPassword"
      android:layout_width="wrap_content"
      android:layout_height="64dp"
      android:layout_below="@+id/editTextRegisterEmail"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginStart="38dp"
      android:layout_marginLeft="38dp"
      android:layout_marginTop="17dp"
      android:layout_marginEnd="39dp"
      android:layout_marginRight="39dp"
      android:background="@drawable/rectangle"
      android:ems="10"
      android:fontFamily="@font/poppins_medium"
      android:gravity="center_vertical"
      android:paddingLeft="20dp"
      android:hint="@string/password"
      android:inputType="textPassword"/>

  <EditText

      android:id="@+id/editTextRegisterPassword2"
      android:layout_width="wrap_content"
      android:layout_height="64dp"
      android:layout_below="@+id/editTextRegisterPassword"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginStart="38dp"
      android:layout_marginLeft="38dp"
      android:layout_marginTop="17dp"
      android:layout_marginEnd="39dp"
      android:layout_marginRight="39dp"
      android:background="@drawable/rectangle"
      android:ems="10"
      android:fontFamily="@font/poppins_medium"
      android:gravity="center_vertical"
      android:hint="@string/password"
      android:inputType="textPassword"
      android:paddingLeft="20dp" />

  <RadioGroup
      android:id="@+id/radioBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/editTextRegisterPassword2"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:paddingTop="20dp"
      android:gravity="center"
      android:orientation="horizontal">

    <RadioButton
        android:id="@+id/radioButtonUserMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space40"
        android:layout_marginRight="@dimen/space40"
        android:gravity="center"
        android:buttonTint="@color/colorAccent"
        android:text="Male"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_18" />

    <RadioButton
        android:id="@+id/radioButtonUserFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:buttonTint="@color/colorAccent"
        android:text="Female"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_18" />

  </RadioGroup>

  <Button
      android:id="@+id/savebtn"
      android:layout_width="195dp"
      android:layout_height="68dp"
      android:layout_below="@+id/radioBtn"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"

      android:layout_marginStart="117dp"
      android:layout_marginLeft="117dp"
      android:layout_marginTop="52dp"
      android:layout_marginEnd="99dp"
      android:layout_marginRight="99dp"
      android:layout_marginBottom="10dp"
      android:background="@drawable/loginblueshape"
      android:fontFamily="@font/fredoka_one"
      android:onClick="saveButtonClicked"
      android:text="Save"
      android:textColor="@color/colorWhite"
      android:textSize="20sp" />



  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentBottom="true">

    <LinearLayout
        android:id="@+id/vungle_banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <LinearLayout
        android:id="@+id/adViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

  </LinearLayout>
</RelativeLayout>