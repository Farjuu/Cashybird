<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4">


    <ImageView
        android:id="@+id/pipe_top"
        android:layout_width="wrap_content"
        android:layout_height="374dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="208dp"
        android:layout_marginLeft="208dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/pipe_top">

    </ImageView>

    <ImageView
        android:id="@+id/pipe_bottom"
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:layout_below="@+id/pipe_top"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="208dp"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/pipe_bottom">

    </ImageView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:padding="@dimen/space40"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="591dp"

        >
        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:text="@string/score1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#E95550 "

            android:shadowColor="#A91E19"
            android:shadowDy="4"
            android:shadowDx="8"
            android:shadowRadius="200"
            android:textSize="34sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/score_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:text=" 01"

            android:shadowColor="#A91E19"
            android:shadowDy="4"
            android:shadowDx="8"
            android:shadowRadius="200"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#E95550 "
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>